# Custom button
<CustButton@Button>:
    font_size: 32

# Define id so I can refer to the CalcGridLayout
# class functions
# Display points to the entry widget
<CalcGridLayout>:
    id: calculator
    display: entry
    rows: 6
    padding: 10
    spacing: 10



    # Output display Area
    BoxLayout:
        TextInput:
            id: entry
            font_size: 32
            multiline: True

    # When buttons are pressed update the entry
    BoxLayout:
        spacing: 10
        CustButton:
            text: "%"
            on_press:calculator.addToList(entry.text , self.text)
        CustButton:
            text: "C"
            on_press: entry.text=""
        CustButton:
            text: "CE"
            on_press: entry.text=""
        CustButton:
            text: "/"
            on_press: calculator.addToList(entry.text , self.text)


    BoxLayout:
        spacing: 10
        CustButton:
            text: "7"
            on_press: calculator.addToList(entry.text , self.text)
            background_color: (157/255 , 157/255 , 157/255 , 1)
        CustButton:
            text: "8"
            on_press: calculator.addToList(entry.text , self.text)
            background_color: (157/255 , 157/255 , 157/255 , 1)
        CustButton:
            text: "9"
            on_press: calculator.addToList(entry.text , self.text)
            background_color: (157/255 , 157/255 , 157/255 , 1)
        CustButton:
            text: "+"
            on_press: calculator.addToList(entry.text , self.text)

    BoxLayout:
        spacing: 10
        CustButton:
            text: "4"
            on_press: calculator.addToList(entry.text , self.text)
            background_color: (157/255 , 157/255 , 157/255 , 1)
        CustButton:
            text: "5"
            on_press: calculator.addToList(entry.text , self.text)
            background_color: (157/255 , 157/255 , 157/255 , 1)
        CustButton:
            text: "6"
            on_press: calculator.addToList(entry.text , self.text)
            background_color: (157/255 , 157/255 , 157/255 , 1)
        CustButton:
            text: "-"
            on_press: calculator.addToList(entry.text , self.text)

    BoxLayout:
        spacing: 10
        CustButton:
            text: "1"
            on_press: calculator.addToList(entry.text , self.text)
            background_color: (157/255 , 157/255 , 157/255 , 1)
        CustButton:
            text: "2"
            on_press: calculator.addToList(entry.text , self.text)
            background_color: (157/255 , 157/255 , 157/255 , 1)
        CustButton:
            text: "3"
            on_press: calculator.addToList(entry.text , self.text)
            background_color: (157/255 , 157/255 , 157/255 , 1)
        CustButton:
            text: "*"
            on_press: calculator.addToList(entry.text , self.text)

    # When equals is pressed pass text in the entry
    # to the calculate function
    BoxLayout:
        spacing: 10
        CustButton:
            text: "+/-"
            on_press: calculator.addToList(entry.text , self.text)
            background_color: (157/255 , 157/255 , 157/255 , 1)
        CustButton:
            text: "0"
            on_press: calculator.addToList(entry.text , self.text)
            background_color: (157/255 , 157/255 , 157/255 , 1)
        CustButton:
            text: "."
            on_press: calculator.addToList(entry.text , self.text)
            background_color: (157/255 , 157/255 , 157/255 , 1)
        CustButton:
            text: "="
            on_press: calculator.addToList(entry.text, self.text)